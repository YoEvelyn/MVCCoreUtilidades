@model List<BlobModel>

<h1>Azure Blobs List, Container: @ViewData["CONTAINERNAME"]</h1>

<a asp-controller="AzureBlobs" asp-action="ListContainers">Volver a containers</a>
<a asp-controller="AzureBlobs" asp-action="UploadBlob" asp-route-containername="@ViewData["CONTAINERNAME"]">Upload Blob</a>
<hr/>
<ul class="list-group">
    @foreach (BlobModel blob in Model)
    {
        <li class="list-goup-item list-group-item-info">
            @blob.Nombre
            <img src="@blob.Url" style="width:150px; height:150px;"/>
            <a asp-controller="AzureBlobs" asp-action="DeleteBlob" asp-route-containername="@ViewData["CONTAINERNAME"]" asp-route-blobname="@blob.Nombre">
                Delete
            </a>
        </li>
    }
</ul>